# Function that allows for more than one input
def greet_with(name, location):
  print(f"Hello, {name}.")
  print(f"How's the weather over there in {location}?")

greet_with("bob", "aokigahabara")

# using keyword argument. (instead of positional)

greet_with(location = "aokigahabara", name = "Bob") # position doesnt matter :D 
