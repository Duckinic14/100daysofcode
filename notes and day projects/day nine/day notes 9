programming_dictionary = {
"Bug": "An error in a program that prevents the program from running as expected.", 
"Function": "A piece of code that you can easily call over and over again.",
}

# Learning dictionary. key: associated value
# print(programming_dictionary["Function"])

# Adding new items to dictionary
programming_dictionary["Loop"] = "The action of doing something over and over again."


# Create empty
empty_list = [] # create empty list
empty_dictionary = {} # create empty dictionary

# Wipe a existing dictionary
# programming_dictionary = {} # useful for resetting scores
# print(programming_dictionary)


# Edit an item in a dictionary
programming_dictionary["Bug"] = "A moth in your computer."
print(programming_dictionary)


# Loop through a dictionary
for key in programming_dictionary:
  print(key)
  print(programming_dictionary[key])




##################################################

# Nesting
capitals = {
 "France": "Paris",
 "Germany": "Berlin",
}

# Nesting a list in a dictionary
travel_log = {
  "France": {"cities visited": ["Paris", "Lille", "Dijon"], "total_visits": 12 },
  "Germany": {"cities visited": ["Berlin", "Hamburg", "Stuttgart"], "total_visits": 5},
}


# Nesting dictionaries in a list
travel_log = [
  {
    "country": "France",
    "cities visited": ["Paris", "Lille", "Dijon"], 
    "total_visits": 12 
  },
  {
    "country": "Germany",
    "cities visited": ["Berlin", "Hamburg", "Stuttgart"],
    "total_visits": 5
  },
] #two dictionaries, three key value pairs. Hold string list and integer
# just can't change key and value must be separated by colon

print(travel_log)
